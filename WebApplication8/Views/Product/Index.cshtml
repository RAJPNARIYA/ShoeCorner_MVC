	<!-- our work portfolio -->
	<div class="arrivals">
		<div class="container">


			<div class="filters">
				<div class="filter clearfix">
					<div class="holder">
						<ul>
							<li><a href="#" class="active" data-filter=".class2"><i class="fa fa-star"></i>BESTSELLERS</a></li>
						</ul>
						<div class="holder-border"></div>
					</div>
				</div>
				<div class="clear"></div>


				<div class="row shop-grid">
					


							@foreach (var item in Model)
							{
								<div class="col-md-3 grid-item mb30">
									<div class="arrival-overlay">
										<img src="~/images/@item.Product_img1" class="img-size" alt="product image">
										<div class="arrival-mask">
											<a href="#" class="medium-button button-red add-cart">Add to Cart</a>
											<a href="#" class="wishlist"><i class="fa fa-heart"></i> Add to Wishlist</a>
										</div>
									</div>
									<div class="arr-content">
										<p>@item.Product_Name</p>
										<ul>
											<li><span class="low-price"><i class="fa fa-rupee">@item.Price</i></span></li>
										</ul>
									</div>
								</div>
							}
						

				</div>
			</div>
		</div>
		<!-- End Filters -->

	</div>

</div>
